<div ng-cloak ng-controller="toolsController as tctrl">
    <div ng-show="tctrl.load" style="padding: 16px;">
        <react-component name="EuiProgress" props="{size: 'xs', color: 'primary'}" ></react-component>
    </div>

    <div ng-if="!tctrl.load && tctrl.toolsTabsProps" class="wz-margin-top-16 md-margin-h">
        <react-component name="Tabs" props="tctrl.toolsTabsProps" ></react-component>
    </div>